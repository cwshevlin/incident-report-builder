<% expectations = {:successful => "Successful", :organized => "Organized", :achieving => "Achieving", :respectful => "Respectful"} %>
<% functions = ["Obtain peer attention", "Obtain adult attention", "Obtain items/activities", "Obtain sensory input", "Avoid peers", "Avoid adult", "Avoid task or activity", "Avoid sensory input", "Unable to determine", "Other"] %>
<% responses = ["Verbal reminders (problem-solving cues)", "Time out", "Reflection sheet", "Peer mediation", "Loss of privilege", "Proximity controls", "Removal to other room ", "Change seat", "Call to parents", "Lunch Detention", "After-school Detention", "Physical hold" ] %>

<%= form_for @incident do |f| %>
    <%= render 'shared/incident_error_messages' %>
    
        <%= f.label "Date" %>
        <%= f.datetime_select(:date_time, options: {ampm: true, discard_type: true}, html: {class: "form-control"}) %>
        <br>
        <%= f.label "Expectation violated" %>
        <br>
        <% expectations.each do |expectation| %>
            <%= f.check_box(:expectation_violated, ) %>
            <%= f.label expectation[0] %>
        <br>
        <% end %>
   
        <%= f.label "Severity" %>
        <%= f.select(:major_or_minor, ["Minor", "Major"], { include_blank: false }, class: "form-control") %>
        <br>
        <%= f.label "Description of problem/situation" %>
        <%= f.text_area :anecdote, class: "form-control" %>
        <br>
        <%= label_tag "Location (if classroom indicate subject of class)" %>
        <%= f.select(:location, ["Lunchroom", "Cafeteria", "Hallway", "Classroom", "Recess", "Computer Lab", "Science Lab", "Bilingual Room", "Counselor's Office"], { include_blank: true }, class: "form-control") %>
        <br>
        <%= f.text_field :location, placeholder: "Subject of Class", class: "form-control" %>
        <br>
        <%= f.label "Setting" %>
        <%= f.select(:context, ["Small Group", "Whole Class", "Transition Time", "Walking through hallways", "Recess", "Lunch", "Independent Work"], { include_blank: true }, class: "form-control") %>
        <br>
        <%= f.label "Duration" %>
        <%= f.select(:duration, ["Less than 5 minutes", "5-15 minutes", "15-30 minutes", "30-60 minutes", "> 1 hour"], { include_blank: true }, class: "form-control") %>
        <br>
        <%= f.label "Possible functions" %>
        <% functions.each do |function| %>
            <%= check_box_tag function %>
            <%= f.label function %>
        <br>
        <% end %>
    
        <%= f.label "Staff responses" %>
        <br>
        <% responses.each do |response| %>
            <%= check_box_tag response %>
            <%= f.label response %>
            <br>
        <% end %>
        <br>
        <%= f.label "Effects on behavior" %>
        <%= f.select(:effect_on_behavior, ["Diminished, but still present", "Ceased", "No Effect", "Escalated"], { include_blank: true} ) %>
        <br>
<%= f.submit class: "btn btn-primary" %>
    <% end %>
    <br>